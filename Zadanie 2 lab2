#include <iostream>
using namespace std;
int main()
{
 int n,suma,srednia,pkt;
 cout << "Podaj liczbe studentow :";
 cin >> n;
 int i=0;
while(i<n){
	cout<<"Podaj liczbe pkt: ";
	cin>>pkt;
	if(pkt>0 && pkt<100){
	suma+=pkt;
	i+=1;
	
	}
	cout<<"Podaleś pkt z poza przedziału :"
	<<endl;
}
	srednia=suma/n;
	cout<<"Srednia pkt studentow :"<<srednia;
}
